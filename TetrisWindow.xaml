<Window x:Class="TetrisFinal.TetrisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisFinal"
        mc:Ignorable="d"
        KeyDown="MainWindow_OnKeyDown"
        Title="TetrisWindow" Height="800" Width="600" ResizeMode="NoResize">

    <Grid Name="MainGrid" Height="481" Background="#FFBFBFBF" Margin="142,0,179,0">
        <TextBox x:Name="UserName" Height="19" Width="96" Canvas.Left="238" Canvas.Top="301" Text="Username" Grid.ColumnSpan="4" Grid.Column="3" Margin="8,-97,7,105"/>
