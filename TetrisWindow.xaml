        <TextBlock Grid.Column="9" Margin="75,14,-131,22" Grid.RowSpan="2" Grid.Row="2">Score</TextBlock>
        <Image x:Name="nextImage" Grid.Column="9" Margin="92,-11,-144,1" Grid.RowSpan="2">

        </Image>
        <TextBlock x:Name="scoreBox" Grid.Column="9" Margin="90,14,-146,25" Grid.RowSpan="2" Grid.Row="3"></TextBlock>
        <TextBlock Grid.Column="9" Margin="75,13,-131,20" Grid.Row="5" Grid.RowSpan="2">Level</TextBlock>
        <TextBlock x:Name="levelBox" Grid.Column="9" Margin="90,14,-146,23" Grid.Row="6" Grid.RowSpan="2"/>
        <TextBlock Grid.Column="9" Margin="75,-42,-131,50">Next Block</TextBlock>
        <TextBlock Margin="-119,-42,63,50">Held Block</TextBlock>
        <Image x:Name="heldImage" Margin="-117,-11,65,1" Grid.RowSpan="2"/>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
